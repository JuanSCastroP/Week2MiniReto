import UIKit

var nrango = 0 ... 100
var i = 0

for i in nrango
{
    if i == 0 {
        print("El numero \(i)")
    }
    else {
        if i % 5 == 0
            { // valida si el numero es divisible entre 5
                print("\t Numero ---> ðŸŽˆ \(i) BINGO!!!")
    
            }
    
        if i  % 2 == 0
            { // Evalua si el numero es Par
                print("El numero \(i) es PAR!")
                if i >= 30 && i <= 40
                    { // imprime Viva Swift si se encuentra entre 30 y 40
                        print("\t\t El numero \(i) --> ðŸ‘ðŸ½Viva Swift!!!!")
                    }
        
            }else{ //Impar
                print("El numero \(i) es IMPAR!")
                if i >= 30 && i <= 40
                    { // imprime Viva Swift si se encuentra entre 30 y 40
                        print("\t\t El numero \(i) --> ðŸ‘ðŸ½Viva Swift!!!!")
                    }
            }
            /*if i >= 30 && i <= 40{  // imprime viva swift si se encuentra entre 30 y 40 SIN importar si es Par o Impar
                print("Viva Swift!!!!")
            }*/
    
        }
}
